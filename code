//CLASSES

class player1
{
	//STARTS WITH MORE HEALTH
public:
	int position = 1;
	int attack = 10;
	int goldstart = 0;
	int health = 100;
};

class player2
{
	//STARTS WITH MORE ATTACK
public:
	int position = 5;
	int attack = 15;
	int goldstart = 0;
	int health = 75;
};

